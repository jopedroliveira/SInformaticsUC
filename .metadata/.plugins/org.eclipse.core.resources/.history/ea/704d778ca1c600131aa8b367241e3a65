package ex5;

import java.util.Scanner;
import java.util.Random;

public class main {
	
	public static void main(String[] args){
				
		//UX
		System.out.print("poligonos a ser gerados ");
		Retangulo ret = new Retangulo();
		Triangulo tri = new Triangulo();
		
		//Distance
		System.out.print("\nRetangulo.x: "+ret.x+" Retangl.y: "+ret.y);
		System.out.print("\nTriangulo.x: "+tri.x +" Triang.y: "+tri.y);
		System.out.print("\nDistancia entre os poligonos: " + tri.distancia(ret));
			
		//Map
		int I_MAX = 10;
		int J_MAX = 20;

		for(int i =0; i<I_MAX; i++){
			if(i==0){
				System.out.print("\n\n");
			}
			for(int j = 0 ; j<J_MAX; j++){
				if(j==0){
					System.out.print("   ");
				}
				if(i==tri.x & j==tri.y){
					System.out.print("0");
					break;
				}
				System.out.print(".");
			}
			System.out.print("\n");
		}
		
	}

}
