package ex5;

import java.util.Random;

import exercicio3.java.Retangulo;

public class Retangulo {
	//atributos
	public int altura;
	public int largura;
//ver posicao

	public Retangulo(){
		Random rand = new Random();
		this.altura = rand.nextInt(10) + 1;
		this.largura = rand.nextInt(20)+1;
	}
	
	public int calculaArea(int altura, int largura){
		int area = altura*largura;
		return area;
	}
	
	public double distancia(Retangulo outroRetangulo){
		double dx = this.posicaox - outroRetangulo.posicaox; 
		double dy = this.posicaoy - outroRetangulo.posicaoy;
		return Math.sqrt(dx*dx+dy*dy);
	}
	
	public String toString(){
		return R;
	}
	
	}
}
