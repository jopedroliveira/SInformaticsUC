package snakeoop;

import java.util.Scanner;

public class movimentoPontuacao {
	Scanner com = new Scanner(System.in);
	
	public movimentoPontuacao(String mapax, sNake snakk, int ttl, int ttlbonus){
		int mov = com.nextInt();

		mapa[snake.x][snake.y]=".";
		new snakeMovv(snake, mov);
		System.out.println("TTL atual: "+ttl);
		if(snake.x==10 || snake.x ==-1 || snake.y == -1 || snake.y == 20){
			System.out.println("Saiste do limite :( ");
			break;
		}
		if(mapa[snake.x][snake.y] =="."){
			mapa[snake.x][snake.y] = snake.car;
			ttl = ttl-1;
			new printMapa(mapa);
		}
		else if(mapa[snake.x][snake.y] == "c"){
			mapa[snake.x][snake.y] = snake.car;
			ttl = ttl+bonusttl;
			new printMapa(mapa);
		}
		else{
			System.out.println("Ohh morreste!");
			ttl = -1;
			break;
		}
	}
	if(ttl <= 0){
		System.out.println("Ohh acabaste com o teu TTL");

	}
