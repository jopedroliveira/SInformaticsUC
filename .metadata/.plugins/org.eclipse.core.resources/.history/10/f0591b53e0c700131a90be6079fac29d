package snakeoop;

import java.util.Scanner;

public class sNake {
	int x,y;
	String car = null;
	public sNake(){
		posicao posi = new posicao();
		this.x = posi.x;
		this.y = posi.y;
		this.car = "O";
	}
	
	public static sNake snakemove(sNake snak,String mov){
		System.out.println(mov);
		String up = "w";
		String left = "a";
		String righ = "d";
		String down = "s";
		//int TTL = 3;
		//int TTLbonus = 3;


		if(mov == up){
			this.y = snak.y+1;
		}
		else if(mov == down){
			this.y=snak.y-1;
		}
		else if(mov == left){
			this.x = snak.x-1;
		}
		else if(mov == righ){
			this.x = snak.x+1;
		}
		System.out.println("x velho:" +snak.x+"x novo:"+this.x);
		return snak;
	}

}
