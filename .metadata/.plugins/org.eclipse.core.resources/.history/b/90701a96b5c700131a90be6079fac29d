package snakeoop;

import java.util.Scanner;

public class snakeMove {
	
	
	public snakeMove(String[][] mapaq, sNake snak){
		String up = "w";
		String left = "a";
		String righ = "d";
		String down = "s";
		int TTL = 3;
		int TTLbonus = 3;
		
		Scanner com = new Scanner(System.in);
		String mov =(String) com.nextLine();
		while(mov != null){
			if(mov = up){
				snak.y = snak.y+1;
			}
			else if(mov=down){
				snak.y=snak.y-1;
			}
			else if(mov=left){
				snak.x = snak.x-1;
			}
			else if(mov=righ){
				snak.x = snak.x+1;
			}
			else{
				String mov = com.nextLine();
			}
		}
	}
}
