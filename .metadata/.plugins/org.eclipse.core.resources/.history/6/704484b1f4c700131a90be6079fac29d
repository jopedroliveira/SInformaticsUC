package snakkoop;

import java.util.Scanner;

public class movimentoPontuacao {
	Scanner com = new Scanner(System.in);
	
	public movimentoPontuacao(String mapaxx, snakk snakk, int ttll, int ttllbonus){
		int mov = com.nextInt();

		mapax[snakk.x][snakk.y]=".";
		new snakkMovv(snakk, mov);
		System.out.println("ttll atual: "+ttll);
		if(snakk.x==10 || snakk.x ==-1 || snakk.y == -1 || snakk.y == 20){
			System.out.println("Saiste do limite :( ");
			break;
		}
		if(mapax[snakk.x][snakk.y] =="."){
			mapax[snakk.x][snakk.y] = snakk.car;
			ttll = ttll-1;
			new printmapax(mapax);
		}
		else if(mapax[snakk.x][snakk.y] == "c"){
			mapax[snakk.x][snakk.y] = snakk.car;
			ttll = ttll+ttlbl;
			new printmapax(mapax);
		}
		else{
			System.out.println("Ohh morreste!");
			ttll = -1;
			break;
		}
	}
	if(ttll <= 0){
		System.out.println("Ohh acabaste com o teu ttll");

	}
