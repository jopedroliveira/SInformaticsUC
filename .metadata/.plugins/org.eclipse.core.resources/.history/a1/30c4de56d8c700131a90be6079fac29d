package snakeoop;

import java.util.Scanner;

public class snakeMove {
	int x,y;
	Scanner com = new Scanner(System.in);
	String mov = com.nextLine();
	Scanner start = new Scanner(System.in);
	start.nextLine(Wnrwe);
	
	public snakeMove(sNake snake){
		String up = "w";
		String left = "a";
		String righ = "d";
		String down = "s";
		//int TTL = 3;
		//int TTLbonus = 3;
		
		if(mov == up){
			this.y = snake.y+1;
		}
		else if(mov == down){
			this.y=snake.y-1;
		}
		else if(mov == left){
			this.x = snake.x-1;
		}
		else if(mov == righ){
			this.x = snake.x+1;
		}
		System.out.println("x velho:" +snake.x+"x novo:"+this.x);
	}
}

