package snakeoop;

import java.util.Scanner;

public class sNake {
	int x,y;
	String car = null;
	public sNake(){
		posicao posi = new posicao();
		this.x = posi.x;
		this.y = posi.y;
		this.car = "O";
	}
	
	public static sNake snakeMove(sNake snake){
		Scanner com = new Scanner(System.in);
		String mov = com.nextLine();
		System.out.println(mov);
		String up = "w";
		String left = "a";
		String righ = "d";
		String down = "s";
		//int TTL = 3;
		//int TTLbonus = 3;
		
		
		if(mov == up){
			this.y = snake.y+1;
		}
		else if(mov == down){
			this.y=snake.y-1;
		}
		else if(mov == left){
			this.x = snake.x-1;
		}
		else if(mov == righ){
			this.x = snake.x+1;
		}
		System.out.println("x velho:" +snake.x+"x novo:"+this.x);
	}
	
}
